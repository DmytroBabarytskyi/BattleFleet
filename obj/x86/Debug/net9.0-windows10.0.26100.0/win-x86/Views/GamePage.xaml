<Page
    x:Class="BattleFleet.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BattleFleet"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Морський бій" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <!-- Top Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button x:ConnectionId='6' x:Name="SaveGameButton" 
                    Content="Зберегти гру" 
                                                
                    Margin="0,0,10,0"
                    Opacity="0.3"/>
            <Button x:ConnectionId='7' x:Name="BackToMainButton"
                    Content="На головну"
                                                  
                    Margin="0,0,10,0"/>
            <ComboBox x:ConnectionId='8' x:Name="ShipSelector" 
                                                                      
                      Width="150"
                      Margin="0,0,10,0">
                <ComboBoxItem Content="4-палубний" Tag="4"/>
                <ComboBoxItem Content="3-палубний" Tag="3"/>
                <ComboBoxItem Content="2-палубний" Tag="2"/>
                <ComboBoxItem Content="1-палубний" Tag="1"/>
            </ComboBox>
            <Button x:ConnectionId='9' x:Name="SetHorizontalButton" 
                    Content="Горизонтально" 
                                               
                    Margin="0,0,10,0"/>
            <Button x:ConnectionId='10' x:Name="SetVerticalButton" 
                    Content="Вертикально" 
                                             
                    Margin="0,0,10,0"/>
            <Button x:ConnectionId='11' x:Name="FinishPlacementButton" 
                    Content="Завершити розстановку" 
                                                 />
        </StackPanel>

        <!-- Main content -->
        <Grid Grid.Row="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="40">
                    <!-- Поле гравця -->
                    <StackPanel>
                        <TextBlock Text="Ваше поле" FontSize="20" HorizontalAlignment="Center"/>
                        <Grid x:ConnectionId='4' x:Name="PlayerGrid" Width="500" Height="500">
                            <Image x:ConnectionId='5' x:Name="PlayerOceanBackground" Stretch="UniformToFill" />
                        </Grid>
                    </StackPanel>

                    <!-- Поле комп'ютера -->
                    <StackPanel>
                        <TextBlock Text="Поле противника" FontSize="20" HorizontalAlignment="Center"/>
                        <Grid x:ConnectionId='2' x:Name="ComputerGrid" Width="500" Height="500">
                            <Image x:ConnectionId='3' x:Name="ComputerOceanBackground" Stretch="UniformToFill" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

